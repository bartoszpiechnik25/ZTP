{
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.0.0"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "cd frontend && yarn lint:fix"
    ],
    "frontend/**/*.{js,ts,json,css,md}": [
      "cd frontend && yarn prettier --write"
    ]
  }
}
